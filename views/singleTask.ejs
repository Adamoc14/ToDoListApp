<%- include("templates/header") %>
<div class="single_main_container">
    <a class="close_task" href="/"><i class="fa fa-1x fa-close" aria-hidden="true"></i></a>
    <h3 class="priority_tag_single"><%= task.priority %></h3>
    <div class="details_single">
        <h3 class="title"><%= task.title %></h3>
        <p class="description"><%= task.description.slice(0,60) %></p>
        <h6 class="date"><%= task.Date.toString(). slice(0,15) %></h6>
    </div>
    <div class="control_btns_container">
        <a href="/<%= task.id %>/edit" class="edit_btn">Edit Task</a>
        <form action="<%= task.id %>?_method=DELETE" class="delete_form" method="post">
            <input type="submit" class="delete_btn" value="Delete Task">
        </form>
    </div>
</div>
<%- include("templates/footer") %>