<%- include("templates/header") %>
<div class="formContainer">
    <h2>Update Task</h2>
    <form action="/<%= task._id %>?_method=PUT" method="post">
        <div class="container">
            <label for="title">Title:</label>
            <input type="text" name="Task[title]" id="title" value="<%= task.title %>">
        </div>
        <div class="container">
            <label for="priority">Priority:</label>
            <select name="Task[priority]" id="priority" value="<%= task.priority %>">
                <% helper.preselect(`<option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option>`,task.priority).forEach(function(value){ %>
                    <%- value %>
                <% })%>
            </select>
        </div>
        <div class="container">
            <label for="description">Description:</label>
            <textarea name="Task[description]" id="description" cols="30" rows="10"><%= task.description %></textarea>
        </div>
        <input type="submit" value="Update">
    </form>
</div>
<%- include("templates/footer") %>